#
# Launches the Rio UI
#

rioVersion=5.0-M3

scriptDir="`dirname $0`"
if [ -z "$RIO_HOME" ] ; then
    if [ "$scriptDir" = "bin" ] ; then
        RIO_HOME="$scriptDir"
        path_to_jar="lib/rio-ui-$rioVersion.jar"
    else
        if [ "$scriptDir" = "." ] ; then
            path_to_jar="../lib/rio-ui-$rioVersion.jar"
        else
            echo "Dont know how to start Rio UI from [$scriptDir]"
            exit 1
        fi
    fi
else
    path_to_jar="$RIO_HOME/lib/rio-ui-$rioVersion.jar"
fi

# Check for running on OS/X
opSys=`uname -s`
if [ $opSys = "Darwin" ] ; then
    java -DRIO_HOME=$RIO_HOME -Djava.security.policy=$RIO_HOME/policy/policy.all -Djava.rmi.server.useCodebaseOnly=false -Djava.protocol.handler.pkgs=org.rioproject.url -Xdock:name="Rio" -jar $path_to_jar $*
else
    java -DRIO_HOME=$RIO_HOME -Djava.security.policy=$RIO_HOME/policy/policy.all -Djava.rmi.server.useCodebaseOnly=false -Djava.protocol.handler.pkgs=org.rioproject.url -jar $path_to_jar  $*
fi

